{
  "expo": {
    "name": "Better Wallet - Cold",
    "slug": "betterwallet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "betterwallet",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "A secure, offline-only Better Wallet cold wallet for maximum security",
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "app.betterwallet.cold",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to scan QR codes for transaction signing.",
        "NSFaceIDUsageDescription": "Allow Better Wallet to authenticate using Face ID to protect your private keys.",
        "NSLocalAuthenticationUsageDescription": "This app uses biometric authentication for secure transaction signing."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#627EEA",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "app.betterwallet.cold",
      "permissions": [
        "CAMERA",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "android.permission.CAMERA",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#627EEA",
          "dark": {
            "backgroundColor": "#1a1a1a"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "This app needs camera access to scan QR codes for transaction signing."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Better Wallet to authenticate using Face ID to protect your private keys."
        }
      ],
      [
        "expo-secure-store",
        {
          "configureAndroidBackup": true,
          "faceIDPermission": "Allow Better Wallet to authenticate using Face ID to protect your private keys."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "12f7df43-f23a-4b78-a3cd-c0972bbd17d4"
      }
    }
  }
}
